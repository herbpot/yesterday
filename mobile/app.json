{
  "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-4388792395765448~8035904086"
  },
  "expo": {
    "name": "살짝더",
    "slug": "slighto",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.herb05.slighto"
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.herb05.slighto",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "FOREGROUND_SERVICE",
        "REQUEST_IGNORE_BATTERY_OPTIMIZATIONS",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "9b38b3d6-e60d-49da-a842-b5db7f255336"
      }
    },
    "plugins": [
      "expo-secure-store",
      [
        "react-native-android-widget", {
          "fonts": ["./assets/fonts/ChosunCentennial_ttf.ttf"],
          "widgets": [
            {
              "name": "TempWidget",     
              "label": "Temp Widget",   
              "minWidth": "220dp",
              "minHeight": "55dp",
              "targetCellWidth": 3,
              "targetCellHeight": 1,
              "description": "온도 위젯",
              "previewImage": "./assets/widget-preview/ttt.png",
              "updatePeriodMillis": 3600000
            }
          ]
        }
      ],
      [
        "react-native-background-fetch", {
          "mavenRepositoryURL": "https://maven.transistorsoft.com/releases"
        }
      ]
    ]
  }
}
